<%= simple_form_for(@podcast,html:{multipart:true, class:'dropzone', id:'my-dropzone'}) do |f| %>
  <%= f.error_notification %>

    <div id = "dropzonePreview" class = "dz-message dz-default needsclick">
      <img style = "width:100px; height:100px;" src = "http://www.freeiconspng.com/uploads/upload-icon-31.png">
      <h3>Drop a video file here </h3>
      <strong>or Click to upload</strong>
    </div><br>

    <div class="fallback">
      <%= f.input :mp3 %>
      <%= f.submit "Upload Video" %>
    </div>

    <div style = "float:left;" class = "form-field">

      <%= f.label :image %>

      <%= f.file_field :image, class: "filestyle image", "data-input" => false %>


    </div>


    <div style = "float:left; margin-left: 2px;" class = "form-field">
      <%= f.label :title %>

      <%= f.text_field :title, class: "filestyle mp3", "data-input" => false %>

    </div>

    <div style = "float:left; margin-left: 2px;" class = "form-field">
      <%= f.label :description %>

      <%= f.text_field :description, class: "filestyle mp3", "data-input" => false %>

    </div>

  <div class="form-actions podcasts-submit">
    <%= f.button :submit %>
  </div>
<% end %>
