<h1><%= @conversation.subject  %></h1>

<% @conversation.receipts_for(current_user).each do |receipt| %>
  <div>
    <div><%= receipt.message.sender.firstname %> commented: </div>
    <p><%= receipt.message.body %></p>
  </div>
<% end %>


<%= form_tag conversation_sends_path(@conversation), method: :post do %>
  <div>
    <%= text_area_tag :body %>
  </div>
    <%= submit_tag %>
<% end %>