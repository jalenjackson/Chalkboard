<p id="notice"><%= notice %></p>


<%= @article.title %><br>

<%= @article.description %><br>

<%= @article.user.firstname %>

<div style = "float:right; " class="col-md-8">
  <div style = "float:right;" class="btn-group">


    <%= link_to  like_article_path(@article),class: "like", method: :put do %>
        <p>Like</p>
        <span><%= @article.get_upvotes.size  %></span>

    <% end %>

    <%= link_to unlike_article_path(@article),class: "like", method: :put do %>

        <p>DisLike</p>
        <span><%= @article.get_downvotes.size  %></span>
    <% end %>

  </div>
</div>

<h1>Views</h1>
<%= @article.impressionist_count(:filter=>:ip_address) %>

<% if @article.document? %>
  <iframe src="<%= @article.document.url %>"  frameborder="0" marginwidth="0" marginheight="0" scrolling="no" style="  border:1px solid #CCC; border-width:1px; height:auto; width: 100%; height:800px " allowfullscreen> </iframe>
<% end %>

<% if @article.image? %>
<%= image_tag @article.image.url(:medium) %>
<% end %>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
