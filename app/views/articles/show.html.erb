<style>

  pre code {
    display: block;
    font-family: Menlo, Monaco, Consolas, monospace;
    line-height: 1.5;
    border:none !important;
    padding: 10px;
  }

  pre{
    background: rgb(60,60,60);
    color:rgb(250,190,250) !important;
  }


</style>


<div style = "padding: 0 50px;" class = "container">


<%= raw @article.title %>

<%= raw @article.description %><br>

</div>


<h1>Views</h1>
<%= @article.impressionist_count(:filter=>:ip_address) %>


<div style = "float:right; " class="col-md-8">
  <div style = "float:right;" class="btn-group">


    <%= link_to  like_article_path(@article),class: "like", method: :put do %>
        <p>Like</p>
        <span><%= @article.get_upvotes.size  %></span>

    <% end %>

    <%= link_to unlike_article_path(@article),class: "like", method: :put do %>

        <p>DisLike</p>
        <span><%= @article.get_downvotes.size  %></span>
    <% end %>

  </div>
</div>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
