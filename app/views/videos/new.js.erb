$('#remote_container').html('<%= j render "videos/new" %>');

if ($('#new_video').modal('show')){
        Dropzone.autoDiscover = false;
        Dropzone.options.myDropzone = {
            autoProcessQueue: false,
            maxFilesize:500,
            init: function() {
                var myDropzone = this;
                $(".submit").click(function(e){
                    e.preventDefault();
                    e.stopPropagation();
                    myDropzone.processQueue();
                });
                this.on("addedfile", function() {
                    // show title after dropping file
                    alertify.defaults.transition = "slide";
                    alertify.defaults.theme.ok = "btn btn-primary";
                    alertify.defaults.theme.cancel = "btn btn-danger";
                    alertify.defaults.theme.input = "form-control";
                    $(".ajs-button").html("Sounds Great!");

                    alertify.alert(" ","A great title and description will increase your videos success!", function(){
                        $(".title").fadeIn("slow").addClass("bounceIn");
                        $(".description").fadeIn("slow").addClass("bounceIn");
                        $(".tag-list").fadeIn("slow").addClass("bounceIn");
                        $(".submit").fadeIn("slow").addClass("bounceIn");
                        $(".submit").click(function(){
                           $(".submit").html("Uploading...")
                        });


                    }).set({transition:'slide'}).show();





                    if (this.files[1]!=null){
                        this.removeFile(this.files[0]);
                    }
                });
                this.on("success", function (file, responseText) {
                    window.location.href = ("/videos/"+responseText.id);
                });
            }
        };
        $("#my-dropzone").dropzone({
            addRemoveLinks: true,
            paramName: 'video[mp4]'

        });
}