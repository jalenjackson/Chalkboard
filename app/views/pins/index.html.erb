<%= render 'nav' %>
<%= render 'category' %>
<% if current_user.gender = "Male" %>
    <% title = "Mr." %>

<% else %>
    <% title = "Ms." %>

<% end %>

    <%= link_to 'Landing page', page_path('index') %>



<div style = "transform:translateY(150px); background:rgb(47,47,47)" id="pins">
  <% @pins.each do |pin| %>
      <div class="box panel panel-default">
        <%= link_to (image_tag pin.image.url), pin %>
        <div class="panel-body">
          <h2>
            <%= link_to pin.title, pin %>
          </h2>
          <p style = "color:white;" class="user">
            Published By
            <%= pin.user.firstname %>
            <br>
            <%= pin.created_at %>
            <%= pin.user.city %>
            <%= pin.user.state %>
          <p class="glyphicon glyphicon-heart go_right"></p>
          <p style = "font-size:14px; color:white"><%= pin.get_upvotes.size %></p>

        </div>
      </div>
  <% end %>
</div>



<nav id="page-nav">
  <%= paginate @pins %>
</nav>

