<div>
  <br><br>
  <strong><%= avatar_for(message.user,size:40) %>  <%= link_to message.user.firstname, "/user/#{message.user.username}" %></strong><span style = "font-size:10px; color:rgb(160,160,160)"> <%= message.created_at %></span><br>
  <p style = "color:white; font-size:18px; margin-left: 47px; margin-top:5px;"><%= message.body %> </p>


  <% if message.image.exists? %>
      <p style = "color:black"><span class = "panel"><%= message.user.firstname%> sent an image <span class = "glyphicon glyphicon-picture"></span></span> </p>
    <%= image_tag message.image.url(:medium) , class: 'image-class'  %>
  <% end %>

  <% if message.video_file? %>
      <p style = "color:black"><span class = "panel"><%= message.user.firstname%> sent a video <span class = "glyphicon glyphicon-picture"></span></span> </p>

      <video  id="my_video_1" class="video-js vjs-default-skin" width="100%" height="500px"
              preload="auto" autoplay poster='http://video-js.zencoder.com/oceans-clip.jpg'
              data-setup='{ "aspectRatio":"640:267", "playbackRates": [1, 1.5, 2, 2.5, 3.0], "controls":"true" }'
              poster="MY_VIDEO_POSTER.jpg" data-setup="{}">
        <source src="<%= message.video_file.url %>" type='video/mp4'>
        <source src="<%= message.video_file.url %>" type='video/webm'>
        <source src="<%= message.video_file.url %>" type='video/ogg'>
        <p class="vjs-no-js">
          To view this video please enable JavaScript, and consider upgrading to a web browser that
          <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
        </p>
      </video>
  <% end %>


  </div>

