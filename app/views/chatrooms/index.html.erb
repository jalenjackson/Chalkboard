<div class = "fluid-container">
  <div class = "row">
    <div class = "col-sm-2">
      <% if user_signed_in? %>
        <h1>Chatrooms</h1>
          <ul>
            <% current_user.chatrooms.each do |chatroom| %>
                <li><%= link_to chatroom.name , "#" %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
    <div class = "col-sm-10">
      <p id="notice"><%= notice %></p>


      <table>
        <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @chatrooms.each do |chatroom| %>
            <tr>
              <td><%= chatroom.name %></td>
              <td><%= link_to 'Show', chatroom %></td>
              <td><%= link_to 'Edit', edit_chatroom_path(chatroom) %></td>
              <td><%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Join', chatroom_chatroom_users_path(chatroom), method: :post %></td>
              <td><%= link_to 'Leave chatroom', chatroom_chatroom_users_path(chatroom), method: :delete %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Chatroom', new_chatroom_path %>

    </div>
  </div>
</div>




