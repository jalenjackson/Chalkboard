<%= render 'side_nav' %>

<div class = "container-fluid" style="margin-top: -41px;">
  <div class = "col-sm-10 col-sm-offset-2">
<h1><%= @chatroom.name %></h1>

<div style = "overflow-y:scroll; height: 450px;" data-behavior="messages" data-chatroom-id='<%= @chatroom.id %>'>
  <% @messages.each do |message| %>
      <%= render message  %>
  <% end %>
</div>
    <br>
    <br>
    <br>

    <div style = "margin-top: -50px">
    <%= form_for [@chatroom, Message.new], remote: true, authenticity_token: true do |f| %>
        <%= f.file_field :image , class: "form-controler"%>

        <%= f.text_field :body , rows: 1 , class: "form-control input-box", autofocus:true%>

  <% end %>
    </div>
</div>
